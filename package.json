{
  "name": "clarity-agent-cli",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "description": "CLI and broker interface for Human-in-the-Loop workflows across Clarity agents",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx src/cmd/clarity-agent.ts",
    "start": "node dist/cmd/clarity-agent.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint:eslint": "eslint src --ext .ts --max-warnings=0",
    "lint": "npm run typecheck && npm run lint:eslint",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "npm run build && node --test dist/tests/*.test.js",
    "test:coverage": "npm run build && npx c8 --exclude dist/pkg/ui/** --check-coverage --lines 40 --functions 40 --branches 35 --statements 40 node --test dist/tests/broker.test.js"
  },
  "bin": {
    "clarity-agent": "dist/cmd/clarity-agent.js",
    "clarity-hitl": "dist/cmd/clarity-agent.js"
  },
  "dependencies": {
    "commander": "^14.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.3",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "c8": "^10.1.3",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.1",
    "prettier": "^3.5.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
